#include <iostream>
#include <iomanip>
using namespace std;


int main(){
    int a;
    ios::sync_with_stdio(false);
    cin.tie(0);
    cin >> a;
    for(int i = 0; i < a; i++){
        cout << setw(a-i);
        for(int j = 0; j <= i; j++){
            cout <<"*";
        }
        cout << "\n";
    }
    return 0;
}
